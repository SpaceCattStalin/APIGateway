{
  "Logging": {
    "LogLevel": {
      "Default": "Information",
      "Microsoft.AspNetCore": "Warning"
    }
  },
  "AllowedHosts": "*",
  "ReverseProxy": {
    "Routes": {
      "chatbotRoute": {
        "ClusterId": "chatbot",
        "Match": {
          "Path": "/chat/{**catch-all}"
        }
      },
      "knowledgebaseRoute": {
        "ClusterId": "knowledgebase",
        "Match": {
          "Path": "/knowledge/{**catch-all}"
        }
      },
      "userserviceRoute": {
        "ClusterId": "userservice",
        "Match": {
          "Path": "/users/{**catch-all}"
        }
      }
    },
    "Clusters": {
      "chatbot": {
        "Destinations": {
          "chatbotService": {
            "Address": "http://localhost:5012/"
          }
        }
      },
      "knowledgebase": {
        "Destinations": {
          "knowledgebaseService": {
            "Address": "http://localhost:5011/"
          }
        }
      },
      "userservice": {
        "Destinations": {
          "userservice": {
            "Address": "http://localhost:5013/"
          }
        }
      }
    }
  }
}